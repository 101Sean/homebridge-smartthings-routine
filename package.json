{
  "name": "homebridge-smartthings-routine",
  "version": "1.0.2",
  "description": "Expose SmartThings Routine as a separate HomeKit Bridge with TV-icon switch",
  "main": "index.js",
  "keywords": [
    "homebridge-plugin",
    "homekit",
    "smartthings",
    "routine",
    "tv",
    "switch"
  ],
  "engines": { "node": ">=14.17.0" },
  "dependencies": {
    "axios": "^1.4.0"
  },
  "peerDependencies": {
    "homebridge": ">=1.5.0"
  },
  "homebridge": {
    "platforms": [
      {
        "platform": "StRoutinePlatform",
        "name": "SmartThings Routine Bridge",
        "routineId": "YOUR_ROUTINE_ID",
        "token": "YOUR_SMARTTHINGS_TOKEN"
      }
    ]
  }
}