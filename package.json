{
  "name": "homebridge-smartthings-routine",
  "version": "1.0.6",
  "description": "SmartThings Routine as a child HomeKit Bridge with TV power button",
  "main": "index.js",
  "keywords": [
    "homebridge-plugin",
    "homebridge-platform",
    "smartthings",
    "routine",
    "tv",
    "bridge"
  ],
  "engines": { "node": ">=14.17.0" },
  "dependencies": {
    "axios": "^1.4.0"
  },
  "peerDependencies": {
    "homebridge": ">=1.5.0"
  },
  "homebridge": {
    "platforms": [
      {
        "platform": "StRoutinePlatform",
        "name": "Good Morning Bridge",
        "routineId": "YOUR_SCENE_ID_HERE",
        "token":     "YOUR_SMARTTHINGS_TOKEN_HERE"
      }
    ]
  }
}
