{
  "name": "homebridge-smartthings-routine",
  "version": "1.0.1",
  "description": "Expose SmartThings Routine as HomeKit TV-icon switch",
  "main": "index.js",
  "keywords": [
    "homebridge-plugin",
    "homekit",
    "smartthings",
    "routine",
    "tv",
    "switch"
  ],
  "engines": { "node": ">=14.17.0" },
  "dependencies": {
    "axios": "^1.4.0",
    "hap-nodejs": "^1.2.0"
  },
  "peerDependencies": {
    "homebridge": ">=1.5.0"
  },
  "homebridge": {
    "accessories": [
      {
        "accessory": "StRoutine",
        "name": "Good Morning Routine",
        "routineId": "YOUR_ROUTINE_ID",
        "token": "YOUR_SMARTTHINGS_TOKEN"
      }
    ]
  }
}